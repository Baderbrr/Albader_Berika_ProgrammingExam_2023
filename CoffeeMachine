using System;
namespace Household
{
    public class CoffeeMachine
    {
        private string;
        private int _water;
        private int _coffee;
        public CoffeeMachine(string )
        {
            if (string.IsNullOrEmpty)
            {
                throw new ArgumentException;
            }
            _brand = brand;
        }
        public void AddWater(int amount)
        {
            if (amount <= 0)
            {
                throw new ArgumentException;
            }
            _water += amount;
        }
        public void AddCoffee(int amount)
        {
            if (amount <= 0)
            {
                throw new ArgumentException;
            }
            _coffee += amount;
        }
        public void MakeEspresso()
        {
            int waterNeeded = 30;
            int coffeeNeeded = 20;
            if (_water < waterNeeded)
            {
                throw new InvalidOperationException;
            }
            if (_coffee < coffeeNeeded)
            {
                throw new InvalidOperationException;
            }
            _water -= waterNeeded;
            _coffee -= coffeeNeeded;
        }
    }
}
